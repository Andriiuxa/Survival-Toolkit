<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="andriuxa.newproject.FullscreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:text="find nearest place to call"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="onButtonClick"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button7"
            android:text="open maps"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button8"
            android:text="get weather"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button2"
            android:text="Attract attention"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button3"
            android:text="Edibles and non edibles"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button4"
            android:text="Guide to starting fire"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button5"
            android:text="Danger around you"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button6"
            android:text="Guide to clean water"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />

    </LinearLayout>

</ScrollView>

